.quote.row
  .quote-details.span11
    .quote-text
      #{quote.text}
    .quote-author
      - if quote.author
        = quote.author.name
      - unless quote.source.blank?
        , #{quote.source}
  - if user_signed_in?
    .actions
      = link_to 'Edit', edit_quote_path(quote), class: 'btn'
  .quoteFooter